<Window x:Class="XStart2._0.Windows.FontAwesomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XStart2._0.Windows"
        mc:Ignorable="d"
        Title="FontAwesome图标" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" Margin="5">
                <Label Content="搜索" VerticalAlignment="Center"/>
                <TextBox Width="180"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right">
                <TextBlock Text="1" VerticalAlignment="Center"/>
                <Button Style="{StaticResource BtnConfirm_Style}"/>
            </StackPanel>
        </DockPanel>
        <TabControl Grid.Row="1">
            <TabItem Header="Solid">
                <WrapPanel>
                    <TextBlock Text="1" FontFamily="微软雅黑"/>
                </WrapPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
