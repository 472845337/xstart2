<Window x:Class="XStart2._0.Windows.MessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XStart2._0"
        xmlns:viewModel="clr-namespace:XStart2._0.ViewModel"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModel:MessageBoxViewModel}"
        Title="{Binding Caption}" Height="Auto" Width="Auto" MinHeight="120" MinWidth="280" MaxWidth="500" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Margin="20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image Width="30" Height="30" Stretch="Uniform" Source="{Binding ImageSource}" />
            <TextBlock Text="{Binding Message}" VerticalAlignment="Center" Grid.Column="1" TextWrapping="WrapWithOverflow" />
        </Grid>
        <StackPanel Grid.Row="1" FlowDirection="RightToLeft" Orientation="Horizontal">
            <Button Style="{StaticResource BtnCancel_Style}" Content="取消" Command="{Binding HitCancel}" Visibility="{Binding RelativeSource={RelativeSource Self},Path=IsEnabled,Converter={StaticResource Boolean2VisibilityConverter}}"/>
            <Button Style="{StaticResource BtnConfirm_Style}" Content="确定" Command="{Binding HitOK}" Visibility="{Binding RelativeSource={RelativeSource Self},Path=IsEnabled,Converter={StaticResource Boolean2VisibilityConverter}}"/>
            <Button Style="{StaticResource BtnCancel_Style}" Content="否" Command="{Binding HitNo}" Visibility="{Binding RelativeSource={RelativeSource Self},Path=IsEnabled,Converter={StaticResource Boolean2VisibilityConverter}}"/>
            <Button Style="{StaticResource BtnConfirm_Style}" Content="是" Command="{Binding HitYes}" Visibility="{Binding RelativeSource={RelativeSource Self},Path=IsEnabled,Converter={StaticResource Boolean2VisibilityConverter}}"/>
        </StackPanel>
    </Grid>
</Window>