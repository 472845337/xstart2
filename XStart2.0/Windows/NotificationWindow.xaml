<Window x:Class="XStart2._0.Windows.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XStart2._0.Windows"
        mc:Ignorable="d"
        Title="{Binding Title}" Width="300" WindowStartupLocation="CenterOwner" Height="{Binding Height, Mode = TwoWay}" Icon="pack://application:,,,/Files/Icons/App/info.ico">
    <Grid Margin="5">
        <RichTextBox Background="{Binding Background}">
            <FlowDocument>
                <Paragraph>
                    <Run Text="{Binding Content}"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
